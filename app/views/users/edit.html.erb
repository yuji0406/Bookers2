<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-autofocus">
        <h2>User info</h2>

         <%= render 'books/errors',book:@user %>

         <%= form_with model:@user,local:true do |f| %>
          <div class="form-group">
            <%= f.label "Name"%><br />
            <%= f.text_field:name,autofocus:true,class:"form-control name" %>
          </div>
          <div class="form-group">
            <%= f.label"Image" %><br />
            <%= f.attachment_field :profile_image,placeholder:"プロフィール画像"%>
          </div>
          <div class="form-group">
            <%= f.label"Introduction" %><br />
            <%= f.text_field :introduction,autofocus:true,class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit"Update User",class:"btn btn-secondary"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>