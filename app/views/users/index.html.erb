<main>
  <div class="container px-5 px-sm-0">
    <div class="row">

      <%= render "books/sidebar", user:current_user %>

      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
          <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @user.each do |user|%>
            <tr>
              <td>
                <%= attachment_image_tag user,:profile_image,size:"60x60",fallback:"no_image.jpeg" %>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%= link_to"Show",user_path(user.id) %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>