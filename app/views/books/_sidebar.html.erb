    <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag user,:profile_image,size:"100x100",format:'jpeg',fallback:"no_image.jpeg" %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to "", edit_user_path(user.id) ,class: "btn btn-outline-secondary btn-block fas fa-user-cog"%>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model:@book,local:true do |f| %>
          <div class="form-group">
            <%= f.label "Title"%><br />
            <%= f.text_field:title,autofocus:true,class:"form-control book_title" %>
          </div>
          <div class="form-group">
            <%= f.label"Opinion" %><br />
            <%= f.text_field:body,autofocus:true,class:"form-control book_body"%>
          </div>
          <div class="form-group">
            <%= f.submit"Create Book",method: :post,class:"btn btn-success"%>
          </div>
        <% end %>
      </div>
