<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-autofocus">
        <h1>Editing Book</h1>
        
        <%= render 'books/errors',book:@book %>
        
         <%= form_with model:@book,local:true do |f| %>
          <div class="form-group">
            <%= f.label "Title"%><br />
            <%= f.text_field:title,autofocus:true,class:"form-control book_title" %>
          </div>
          <div class="form-group">
            <%= f.label"Opinion" %><br />
            <%= f.text_field:body,autofocus:true,class:"form-control book_body"%>
          </div>
          <div class="form-group">
            <%= f.submit"Update Book",method: :post,class:"btn btn-success"%>
          </div>
        <% end %>
        <%= link_to "Show",book_path(@book.id) %>
        |
        <%= link_to "Back",books_path %>
      </div>
    </div>
  </div>
</main>